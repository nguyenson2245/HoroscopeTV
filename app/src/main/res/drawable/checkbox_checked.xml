<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/textbg" />
            <stroke
                android:width="2dp"
                android:color="@color/textbg" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_check_white_18dp"
        android:gravity="center" />

</layer-list>